{
  "name": "electron-puppeteer-quick-start",
  "version": "1.0.1",
  "description": "A minimal Electron application with puppeteer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "build",
    "build": "electron-builder build --mac --win --publish never",
    "deploy": "electron-builder build --mac --win --publish always"
  },
  "build": {
    "appId": "com.electron.quickstart",
    "win": {
      "target": "NSIS",
      "icon": "./icon.icns"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icon.icns",
      "category": "your.app.category.type"
    },
    "linux": {
      "target": "deb",
      "category": "Development"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thomasjoin2020/electron.git"
  },
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "dependencies": {
    "electron-updater": "^4.2.0",
    "puppeteer": "^5.2.1"
  },
  "devDependencies": {
    "electron": "^1.8.1",
    "electron-builder": "^19.45.4"
  }
}
